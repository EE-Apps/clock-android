<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройка виджета"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Прозрачность"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <SeekBar
        android:id="@+id/seekBarTransparency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цвет фона"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/colorBlack"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="⬤"
            android:textSize="24sp"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/colorDarkGray"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="⬤"
            android:textSize="24sp"
            android:background="#333333"
            android:textColor="@android:color/white"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/colorGray"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="⬤"
            android:textSize="24sp"
            android:background="#666666"
            android:textColor="@android:color/white"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/colorLightGray"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="⬤"
            android:textSize="24sp"
            android:background="#999999"
            android:textColor="@android:color/black"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/colorRed"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="⬤"
            android:textSize="24sp"
            android:background="#CC0000"
            android:textColor="@android:color/white"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/colorGreen"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="⬤"
            android:textSize="24sp"
            android:background="#00CC00"
            android:textColor="@android:color/black"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/colorBlue"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="⬤"
            android:textSize="24sp"
            android:background="#0066FF"
            android:textColor="@android:color/white"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/colorOrange"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="⬤"
            android:textSize="24sp"
            android:background="#FF9900"
            android:textColor="@android:color/black"
            android:layout_margin="4dp"/>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="По-умолчанию"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnApply"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Применить"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
